        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EjercicioApiNewsProto"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.activities.DetalleNoticia"
            android:exported="false"/>
        <activity
            android:name=".view.activities.Inicio"
            android:exported="false" />
        <activity
            android:name=".view.activities.RegistroActivity"
            android:exported="false"
            android:parentActivityName=".view.activities.Login"/>
        <activity
            android:name=".view.activities.MainActivity"
            android:exported="true" />
