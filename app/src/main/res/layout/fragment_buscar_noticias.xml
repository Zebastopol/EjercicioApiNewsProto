<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.BuscarNoticias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Búsqueda Personalizada"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/txtKeyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Palabra Clave"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="general" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="negocios" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="entretenimiento" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="salud" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="tecnología" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="ciencia"
                    android:textColor="@color/md_cyan_100"
                    app:chipBackgroundColor="@color/md_cyan_600"
                    app:chipStrokeColor="@color/teal_200"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    style="@style/Theme.AppCompat"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="deportes" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <Button
            android:id="@+id/btnBuscarNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa tu Búsqueda" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="515dp"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

</FrameLayout>